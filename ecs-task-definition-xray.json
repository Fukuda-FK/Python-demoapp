{
  "family": "nrdemo-fastapi-demo-task",
  "taskRoleArn": "arn:aws:iam::272128256293:role/nrdemo-ecs-task-role",
  "executionRoleArn": "arn:aws:iam::272128256293:role/nrdemo-ecs-task-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "xray-daemon",
      "image": "public.ecr.aws/xray/aws-xray-daemon:latest",
      "cpu": 32,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 2000,
          "protocol": "udp"
        }
      ],
      "essential": false,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nrdemo-fastapi-demo-app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "xray"
        }
      }
    },
    {
      "name": "newrelic-infra",
      "image": "newrelic/infrastructure:latest",
      "cpu": 0,
      "essential": false,
      "environment": [
        {
          "name": "NRIA_CUSTOM_ATTRIBUTES",
          "value": "{\"environment\":\"demo\",\"service\":\"fastapi\"}"
        },
        {
          "name": "NRIA_DISPLAY_NAME",
          "value": "NRDemo-FastAPI-ECS"
        },
        {
          "name": "NRIA_LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "NRIA_LICENSE_KEY",
          "value": "b9192835de12b671c6eac833583ab5eeFFFFNRAL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nrdemo-fastapi-demo-app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "newrelic"
        }
      }
    },
    {
      "name": "nrdemo-fastapi-demo-container",
      "image": "272128256293.dkr.ecr.ap-northeast-1.amazonaws.com/nrdemo-fastapi-demo-app:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_XRAY_DAEMON_ADDRESS",
          "value": "xray-daemon:2000"
        },
        {
          "name": "AWS_XRAY_TRACING_NAME",
          "value": "nrdemo-fastapi-demo-service"
        },
        {
          "name": "BEDROCK_AGENT_ID",
          "value": "5LVCHW4CIX"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_USER",
          "value": "dbadmin"
        },
        {
          "name": "DB_NAME",
          "value": "payment_demo"
        },
        {
          "name": "BEDROCK_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "DB_HOST",
          "value": "nrdemo-fastapi-demo-db.cm711nipgl4d.ap-northeast-1.rds.amazonaws.com"
        },
        {
          "name": "NEW_RELIC_LOG",
          "value": "stdout"
        },
        {
          "name": "BEDROCK_AGENT_ALIAS_ID",
          "value": "TSTALIASID"
        },
        {
          "name": "NEW_RELIC_LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "NEW_RELIC_APP_NAME",
          "value": "NRDemo FastAPI Demo Service"
        },
        {
          "name": "NEW_RELIC_LICENSE_KEY",
          "value": "b9192835de12b671c6eac833583ab5eeFFFFNRAL"
        },
        {
          "name": "DB_PASSWORD",
          "value": "DBPassword"
        },
        {
          "name": "ENABLE_BEDROCK_TRACE",
          "value": "true"
        }
      ],
      "dependsOn": [
        {
          "containerName": "xray-daemon",
          "condition": "START"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nrdemo-fastapi-demo-app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
